<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="atlasDataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>uk.ac.ebi.microarray.atlas.model.bioentity.AnnotationSource</value>
                <value>uk.ac.ebi.microarray.atlas.model.bioentity.BEProperty</value>
                <value>uk.ac.ebi.microarray.atlas.model.bioentity.BioMartAnnotationSource</value>
                <value>uk.ac.ebi.microarray.atlas.model.bioentity.BioMartProperty</value>
                <value>uk.ac.ebi.microarray.atlas.model.bioentity.CurrentAnnotationSource</value>
                <value>uk.ac.ebi.microarray.atlas.model.bioentity.FileAnnotationSource</value>
                <value>uk.ac.ebi.microarray.atlas.model.bioentity.Software</value>

            </list>
        </property>

        <property name="namingStrategy" ref="hibernateNamingStrategy"/>
        <property name="schemaUpdate" value="false"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
                <prop key="hibernate.query.substitutions">true 1,false 0</prop>
                <prop key="hibernate.cache.use_query_cache">true</prop>
                <prop key="hibernate.cache.use_second_level_cache">true</prop>
                <prop key="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean>

    <bean name="hibernateNamingStrategy" class="uk.ac.ebi.gxa.dao.hibernate.AtlasNamingStrategy"/>

</beans>
