<?xml version="1.0" encoding="UTF-8"?>
<Context swallowOutput="true">
  <Resource
      name="jdbc/ATLAS1"
      type="javax.sql.DataSource"
      factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
      driverClassName="oracle.jdbc.OracleDriver"
      url="${atlasDatasourceURL}"
      username="${atlasUser}"
      password="${atlasPassword}"
      initialSize="32"
      maxIdle="32"
      maxActive="100"
      maxWait="-1"
      />

  <Resource
      name="jdbc/ATLAS2"
      type="javax.sql.DataSource"
      factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
      driverClassName="oracle.jdbc.OracleDriver"
      url="${atlasDatasourceURL}"
      username="${atlasUser}"
      password="${atlasPassword}"
      initialSize="32"
      maxIdle="32"
      maxActive="100"
      maxWait="-1"
      />

  <Resource
      name="file/GXAINDEX"
      type="java.util.File"
      factory="uk.ac.ebi.gxa.naming.factory.FileFactory"
      path="${atlasIndexLocation}"
      />

  <Resource
      name="file/GXAEFOINDEX"
      type="java.util.File"
      factory="uk.ac.ebi.gxa.naming.factory.FileFactory"
      path="${atlasIndexLocation}/efoindex"
      />

  <Resource
      name="file/GXANETCDFS"
      type="java.util.File"
      factory="uk.ac.ebi.gxa.naming.factory.FileFactory"
      path="${atlasNetCDFRepoLocation}"
      />

</Context>
