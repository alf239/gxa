<archetype-descriptor name="atlas-archetype">
    <fileSets>
        <fileSet encoding="UTF-8">
            <directory/>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/main/webapp</directory>
            <includes>
                <include>META-INF/context.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>src/main/resources</directory>
            <includes>
                <include>rservice.properties</include>
                <include>atlas.properties</include>
            </includes>
        </fileSet>
    </fileSets>
    <requiredProperties>
        <!-- normal properties -->
        <requiredProperty key="groupId"/>
        <requiredProperty key="artifactId"/>
        <requiredProperty key="version"/>
        <!-- atlas specific properties? -->
        <requiredProperty key="atlasDatasourceURL"/>
        <requiredProperty key="atlasUser"/>
        <requiredProperty key="atlasPassword"/>
        <requiredProperty key="atlasIndexLocation"/>
        <requiredProperty key="atlasNetCDFRepoLocation"/>
    </requiredProperties>
</archetype-descriptor>