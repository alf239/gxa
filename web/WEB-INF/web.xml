<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee     http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <listener>
        <listener-class>ae3.servlet.ArrayExpressApplicationListener</listener-class>
    </listener>

    <servlet>
        <display-name>AE3 Query Servlet</display-name>
        <servlet-name>query</servlet-name>
        <servlet-class>ae3.servlet.QueryServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Vertical Text Servlet</display-name>
        <servlet-name>vtext</servlet-name>
        <servlet-class>ae3.servlet.VerticalTextServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Search JSP Servlet</display-name>
        <servlet-name>qr</servlet-name>
        <jsp-file>/search.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>qr</servlet-name>
        <url-pattern>/qr</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>vtext</servlet-name>
        <url-pattern>/vtext</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>query</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
</web-app>
