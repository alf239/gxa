<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>uk.ac.ebi.microarray.atlas</groupId>
    <artifactId>atlas</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>ArrayExpress Atlas</name>
    <url>http://www.ebi.ac.uk/microarray-as/atlas/</url>

    <scm>
	    <connection>scm:svn:svn://dukkha.ebi.ac.uk/sandbox/branches/dev/ae3</connection>
	    <developerConnection>scm:svn:svn://dukkha.ebi.ac.uk/sandbox/branches/dev/ae3</developerConnection>
	    <url>svn://dukkha.ebi.ac.uk/sandbox/branches/dev/ae3</url>
    </scm>


    <repositories>
        <repository>
            <id>local-repo</id>
            <url>http://dukkha.ebi.ac.uk:8081/artifactory/local-repo</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>java.net</id>
            <url>http://www.ibiblio.org/maven2/</url>
            <layout>legacy</layout>
        </repository>
    </repositories>

    <build>
	<finalName>${project.artifactId}-r${buildNumber}</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>2.0-beta-6</version>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.2</version>
                <configuration>
                    <testFailureIgnore>true</testFailureIgnore>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                </configuration>
            </plugin>

        </plugins>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh-external</artifactId>
                <version>1.0-beta-2</version>
            </extension>
        </extensions>
    </build>

    <modules>
        <module>indexbuilder</module>
        <module>atlas-web</module>
    </modules>

    <profiles>
	    <profile>
		    <id>prod-smithers</id>
		    <properties>
			    <solr.data.directory>/ebi/ArrayExpress-files/ATLAS.SOLR</solr.data.directory>
			    <indexbuilder.ftp>nowhere</indexbuilder.ftp>
			    <jdbc.ae.url>jdbc:oracle:thin:@otto.ebi.ac.uk:1521:AEPUB1</jdbc.ae.url>
			    <jdbc.ae.driver>oracle.jdbc.driver.OracleDriver</jdbc.ae.driver>
			    <jdbc.ae.username>aequery</jdbc.ae.username>
			    <jdbc.ae.password>aeq007tt</jdbc.ae.password>
			    <jdbc.dw.url>jdbc:oracle:thin:@smithers.ebi.ac.uk:1521:AEDWP</jdbc.dw.url>
			    <jdbc.dw.driver>oracle.jdbc.driver.OracleDriver</jdbc.dw.driver>
			    <jdbc.dw.username>aemart</jdbc.dw.username>
			    <jdbc.dw.password>marte</jdbc.dw.password>
			    <atlas.dbName>AEDWP_SMITHERS</atlas.dbName>
		    </properties>
	    </profile>
    </profiles>

    <properties>
        <solr.data.directory>/ebi/work/solr_idxs/multicore</solr.data.directory>
        <indexbuilder.ftp>nowhere</indexbuilder.ftp>
        <jdbc.ae.url>jdbc:oracle:thin:@otto.ebi.ac.uk:1521:AEPUB1</jdbc.ae.url>
        <jdbc.ae.driver>oracle.jdbc.driver.OracleDriver</jdbc.ae.driver>
        <jdbc.ae.username>aequery</jdbc.ae.username>
