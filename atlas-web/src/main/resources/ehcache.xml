           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
    <cache name="uk.ac.ebi.microarray.atlas.model.Experiment" eternal="true" maxElementsInMemory="6000"
           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
    <cache name="uk.ac.ebi.microarray.atlas.model.SampleProperty" eternal="true" maxElementsInMemory="10000"
           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
    <cache name="uk.ac.ebi.microarray.atlas.model.Organism" eternal="true" maxElementsInMemory="1000"
           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
    <cache name="uk.ac.ebi.microarray.atlas.model.Asset" eternal="true" maxElementsInMemory="1000"
           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
    <cache name="uk.ac.ebi.microarray.atlas.model.Sample" eternal="true" maxElementsInMemory="10000"
           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
    <cache name="uk.ac.ebi.microarray.atlas.model.AssayProperty" eternal="true" maxElementsInMemory="10000"
           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
    <cache name="uk.ac.ebi.microarray.atlas.model.Ontology" eternal="true" maxElementsInMemory="50"
           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
    <cache name="uk.ac.ebi.microarray.atlas.model.Assay" eternal="true" maxElementsInMemory="10000"
           overflowToDisk="false" timeToIdleSeconds="6000" timeToLiveSeconds="300"/>
