<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>Gene Expression Atlas ${version}-r${buildNumber}</display-name>

    <filter>
    <filter-name>UrlRewriteFilter</filter-name>
    <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
    <filter-name>UrlRewriteFilter</filter-name>
    <url-pattern>/*</url-pattern>
    </filter-mapping>
    

    <!-- CXF -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/beans.xml</param-value>
    </context-param>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>Curated</param-value>
    </context-param>

    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>

    <listener>
        <listener-class>
            org.springframework.web.util.IntrospectorCleanupListener
        </listener-class>
    </listener>

    <servlet>
        <display-name>CXF Servlet</display-name>
        <servlet-name>CXFServlet</servlet-name>
        <servlet-class>
            org.apache.cxf.transport.servlet.CXFServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>CXFServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <!-- // CXF -->

    <listener>
        <listener-class>ae3.servlet.ArrayExpressApplicationListener</listener-class>
    </listener>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

    <servlet>
        <display-name>Table Header Servlet</display-name>
        <servlet-name>thead</servlet-name>
        <servlet-class>ae3.servlet.TableHeaderServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Factor Values completion helper</display-name>
        <servlet-name>fval</servlet-name>
        <servlet-class>ae3.servlet.structuredquery.FactorValuesServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
	
    <servlet>
        <display-name>EFO ajax helper</display-name>
        <servlet-name>efo</servlet-name>
        <servlet-class>ae3.servlet.structuredquery.EfoServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
      <display-name>Gene Identifiers Dump</display-name>
      <servlet-name>GeneIdentifiersDump</servlet-name>
      <servlet-class>ae3.servlet.GeneIdentifiersDumpDownloadServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
      <display-name>Gene Ebeye Dump</display-name>
      <servlet-name>GeneEbeyeDump</servlet-name>
      <servlet-class>ae3.servlet.GeneEbeyeDumpDownloadServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

     <servlet>
      <display-name>Google Sitemap</display-name>
      <servlet-name>GoogleSitemap</servlet-name>
      <servlet-class>ae3.servlet.GoogleSitemapXmlServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
     <display-name>GeneListCacheServlet</display-name>
     <servlet-name>GeneListCacheServlet</servlet-name>
     <servlet-class>ae3.servlet.GeneListCacheServlet</servlet-class>
     <load-on-startup>1</load-on-startup>
   </servlet>

    <servlet>
        <display-name>List view download servlet</display-name>
        <servlet-name>ListviewDownloadServlet</servlet-name>
        <servlet-class>ae3.servlet.ListviewDownloadServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
 
    <servlet>
        <display-name>Gene View</display-name>
        <servlet-name>gene</servlet-name>
        <jsp-file>/gene.jsp</jsp-file>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Experiment View</display-name>
        <servlet-name>experiment</servlet-name>
        <jsp-file>/experiment.jsp</jsp-file>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Search JSP Servlet</display-name>
        <servlet-name>qr</servlet-name>
        <jsp-file>/search.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Search JSP Servlet</display-name>
        <servlet-name>qrs</servlet-name>
        <servlet-class>ae3.servlet.structuredquery.StructuredQueryServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Experiments servlet</display-name>
        <servlet-name>experiments</servlet-name>
        <servlet-class>ae3.servlet.structuredquery.ExperimentsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet>
        <display-name>ExperimentGeneList servlet</display-name>
        <servlet-name>expGenes</servlet-name>
        <servlet-class>ae3.servlet.ExpGeneListServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- DAS integration -->
    <servlet>
         <servlet-name>MydasServlet</servlet-name>
         <servlet-class>uk.ac.ebi.mydas.controller.MydasServlet</servlet-class>
     </servlet>

     <servlet>
         <servlet-name>EmptyCache</servlet-name>
         <servlet-class>uk.ac.ebi.mydas.controller.EmptyCache</servlet-class>
     </servlet>

    <servlet>
        <display-name>DasDsn</display-name>
        <servlet-name>DasDsn</servlet-name>
        <jsp-file>/DasDsn.jsp</jsp-file>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>DasDsn</servlet-name>
        <url-pattern>/das/dsn</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MydasServlet</servlet-name>
        <url-pattern>/das/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EmptyCache</servlet-name>
        <url-pattern>/das_flushcache</url-pattern>
    </servlet-mapping>
    <!-- //DAS integration -->


    <servlet-mapping>
        <servlet-name>GeneIdentifiersDump</servlet-name>
        <url-pattern>/download/gene_identifiers.txt</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GeneEbeyeDump</servlet-name>
        <url-pattern>/download/ebeye_export.xml</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
	    <servlet-name>GoogleSitemap</servlet-name>
	    <url-pattern>/sitemap/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListviewDownloadServlet</servlet-name>
        <url-pattern>/listviewdownload/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>expGenes</servlet-name>
        <url-pattern>/expGenes</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>qr</servlet-name>
        <url-pattern>/qr</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>qrs</servlet-name>
        <url-pattern>/qrs</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>thead</servlet-name>
        <url-pattern>/thead</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>fval</servlet-name>
        <url-pattern>/fval</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>efo</servlet-name>
        <url-pattern>/efo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>gene</servlet-name>
        <url-pattern>/gene</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>experiment</servlet-name>
        <url-pattern>/experiment</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>experiments</servlet-name>
        <url-pattern>/experiments</url-pattern>
    </servlet-mapping>

    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>false</el-ignored>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <!-- overriding site-wide JSP configuration to trim whitespace in JSP output -->
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>trimSpaces</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>


</web-app>
