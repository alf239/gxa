<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>ArrayExpress Atlas ${version}-r${buildNumber}</display-name>

    <!-- CXF -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/beans.xml</param-value>
    </context-param>

    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>

    <servlet>
        <display-name>CXF Servlet</display-name>
        <servlet-name>CXFServlet</servlet-name>
        <servlet-class>
            org.apache.cxf.transport.servlet.CXFServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>CXFServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <!-- // CXF -->

    <listener>
        <listener-class>ae3.servlet.ArrayExpressApplicationListener</listener-class>
    </listener>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

    <servlet>
        <display-name>Atlas Query Servlet</display-name>
        <servlet-name>query</servlet-name>
        <servlet-class>ae3.servlet.QueryServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Vertical Text Servlet</display-name>
        <servlet-name>vtext</servlet-name>
        <servlet-class>ae3.servlet.VerticalTextServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Factor Values completion helper</display-name>
        <servlet-name>fval</servlet-name>
        <servlet-class>ae3.servlet.structuredquery.FactorValues</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Experiments lister</display-name>
        <servlet-name>sexpt</servlet-name>
        <servlet-class>ae3.servlet.structuredquery.Experiments</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Gene View</display-name>
        <servlet-name>gene</servlet-name>
        <jsp-file>/gene.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>        
    </servlet>

    <servlet>
        <display-name>Search JSP Servlet</display-name>
        <servlet-name>qr</servlet-name>
        <jsp-file>/search.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <display-name>Search JSP Servlet</display-name>
        <servlet-name>qrs</servlet-name>
        <jsp-file>/structured-query.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>qr</servlet-name>
        <url-pattern>/qr</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>qrs</servlet-name>
        <url-pattern>/qrs</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>vtext</servlet-name>
        <url-pattern>/vtext</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>query</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>fval</servlet-name>
        <url-pattern>/fval</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>sexpt</servlet-name>
        <url-pattern>/sexpt</url-pattern>
    </servlet-mapping>

   <servlet-mapping>
       <servlet-name>gene</servlet-name>
       <url-pattern>/gene</url-pattern>
   </servlet-mapping>

    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>false</el-ignored>
        </jsp-property-group>
    </jsp-config>
</web-app>
