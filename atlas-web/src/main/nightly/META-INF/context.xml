<?xml version="1.0" encoding="UTF-8"?>
<Context swallowOutput="true" unpackWAR="true">
    <Resource
            name="jdbc/ATLAS2"
            type="javax.sql.DataSource"
            factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
            driverClassName="oracle.jdbc.OracleDriver"
            url="${atlas-db.jdbc.url}"
            username="${atlas-db.jdbc.username}"
            password="${atlas-db.jdbc.password}"
            initialSize="6"
            maxIdle="32"
            maxActive="100"
            maxWait="-1"
            />

    <Resource
            name="file/GXAINDEX"
            type="java.util.File"
            factory="uk.ac.ebi.gxa.naming.factory.FileFactory"
            path="${atlas.index}"
            />

    <Resource
            name="file/GXANETCDFS"
            type="java.util.File"
            factory="uk.ac.ebi.gxa.naming.factory.FileFactory"
            path="${atlas.netcdfs}"
            />
</Context>
