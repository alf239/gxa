<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="module_indexbuilder" default="compile.module.indexbuilder">
  <dirname property="module.indexbuilder.basedir" file="${ant.file.module_indexbuilder}"/>
  
  <property name="module.jdk.home.indexbuilder" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.indexbuilder" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.indexbuilder" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.indexbuilder" value="${compiler.args}"/>
  
  <property name="indexbuilder.output.dir" value="/ebi/work/ae3/out/production/Indexbuilder"/>
  <property name="indexbuilder.testoutput.dir" value="/ebi/work/ae3/out/test/Indexbuilder"/>
  
  <path id="indexbuilder.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="indexbuilder.module.classpath">
    <path refid="${module.jdk.classpath.indexbuilder}"/>
    <path refid="library.ae3lib.classpath"/>
  </path>
  
  <path id="indexbuilder.runtime.module.classpath">
    <path refid="${module.jdk.classpath.indexbuilder}"/>
    <pathelement location="${indexbuilder.output.dir}"/>
    <pathelement location="${indexbuilder.testoutput.dir}"/>
    <path refid="library.ae3lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.indexbuilder">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.indexbuilder">
    <patternset refid="excluded.from.module.indexbuilder"/>
  </patternset>
  
  <path id="indexbuilder.module.sourcepath">
    <dirset dir="/ebi/work/ae3/indexbuilder">
      <include name="resource"/>
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="indexbuilder.module.test.sourcepath">
    <dirset dir="/ebi/work/ae3/indexbuilder">
      <include name="src/test/java"/>
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.indexbuilder" depends="compile.module.indexbuilder.production,compile.module.indexbuilder.tests" description="Compile module Indexbuilder"/>
  
  <target name="compile.module.indexbuilder.production" description="Compile module Indexbuilder; production classes">
    <mkdir dir="${indexbuilder.output.dir}"/>
    <javac destdir="${indexbuilder.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.indexbuilder}/javac">
      <compilerarg line="${compiler.args.indexbuilder}"/>
      <bootclasspath refid="indexbuilder.module.bootclasspath"/>
      <classpath refid="indexbuilder.module.classpath"/>
      <src refid="indexbuilder.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.indexbuilder"/>
    </javac>
    
    <copy todir="${indexbuilder.output.dir}">
      <fileset dir="/ebi/work/ae3/indexbuilder/resource">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="/ebi/work/ae3/indexbuilder/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.indexbuilder.tests" depends="compile.module.indexbuilder.production" description="compile module Indexbuilder; test classes" unless="skip.tests">
    <mkdir dir="${indexbuilder.testoutput.dir}"/>
    <javac destdir="${indexbuilder.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.indexbuilder}/javac">
      <compilerarg line="${compiler.args.indexbuilder}"/>
      <classpath refid="indexbuilder.module.classpath"/>
      <classpath location="${indexbuilder.output.dir}"/>
      <src refid="indexbuilder.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.indexbuilder"/>
    </javac>
    
    <copy todir="${indexbuilder.testoutput.dir}">
      <fileset dir="/ebi/work/ae3/indexbuilder/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="/ebi/work/ae3/indexbuilder/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.indexbuilder" description="cleanup module">
    <delete dir="${indexbuilder.output.dir}"/>
    <delete dir="${indexbuilder.testoutput.dir}"/>
  </target>
</project>
