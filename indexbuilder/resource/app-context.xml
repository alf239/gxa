<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSourceAE" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${jdbc.ae.driverClassName}"/>
        <property name="url" value="${jdbc.ae.url}"/>
        <property name="username" value="${jdbc.ae.username}"/>
        <property name="password" value="${jdbc.ae.password}"/>
    </bean>
    
    <bean id="dataSourceDW" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${jdbc.dw.driverClassName}"/>
        <property name="url" value="${jdbc.dw.url}"/>
        <property name="username" value="${jdbc.dw.username}"/>
        <property name="password" value="${jdbc.dw.password}"/>
    </bean>
    
    
	<bean id="experimentJdbcDao" class="uk.ac.ebi.ae3.indexbuilder.dao.ExperimentJdbcDao">
		<property name="dataSource" ref="dataSourceAE"></property>
	</bean>
	
	<bean id="experimentDwJdbcDao" class="uk.ac.ebi.ae3.indexbuilder.dao.ExperimentDwJdbcDao">
		<property name="dataSource" ref="dataSourceDW"></property>
	</bean>
	
	
	<bean id="solrEmbededIndex" class="uk.ac.ebi.ae3.indexbuilder.service.SolrEmbededIndex">
	    <constructor-arg index="0" value="${indexbuilder.indexdir}"></constructor-arg>
	</bean>
	
	<!-- <bean id ="indexBuilderService" class="uk.ac.ebi.ae3.indexbuilder.service.IndexBuilderFromMageTab">
	   <constructor-arg index="0" ref="configurationService"></constructor-arg>
	</bean>
    -->
	<bean id ="indexBuilderService" class="uk.ac.ebi.ae3.indexbuilder.service.IndexBuilderFromDb">
	   <property name="experimentDao" ref="experimentJdbcDao"></property>
	   <property name="experimentDwDao" ref="experimentDwJdbcDao"></property>
	   <property name="solrEmbededIndex" ref="solrEmbededIndex"></property>
	</bean>
	




</beans>
